<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.FXMLCustomerController">
    <stylesheets>
        <URL value="@mdhs.css" />
    </stylesheets>
   <children>
      <HBox prefHeight="400.0" prefWidth="600.0">
         <children>
            <HBox alignment="CENTER" prefHeight="400.0" prefWidth="392.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="400.0" prefWidth="301.0">
                     <children>
                        <Label text="New Customer">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="20.0" prefWidth="80.0" text="Full Name" />
                              <TextField fx:id="txtName" maxHeight="20.0" maxWidth="150.0" prefHeight="20.0" prefWidth="150.0">
                                 <HBox.margin>
                                    <Insets left="20.0" />
                                 </HBox.margin>
                              </TextField>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="20.0" prefWidth="80.0" text="Phone Num" />
                              <TextField fx:id="txtPhone" maxHeight="20.0" maxWidth="150.0" prefHeight="20.0" prefWidth="150.0">
                                 <HBox.margin>
                                    <Insets left="20.0" />
                                 </HBox.margin>
                              </TextField>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="20.0" prefWidth="80.0" text="Email" />
                              <TextField fx:id="txtEmail" maxHeight="20.0" maxWidth="150.0" prefHeight="20.0" prefWidth="150.0">
                                 <HBox.margin>
                                    <Insets left="20.0" />
                                 </HBox.margin>
                              </TextField>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="20.0" prefWidth="80.0" text="Password" />
                              <TextField fx:id="txtPassword" maxHeight="20.0" maxWidth="150.0" prefHeight="20.0" prefWidth="150.0">
                                 <HBox.margin>
                                    <Insets left="20.0" />
                                 </HBox.margin>
                              </TextField>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="20.0" prefWidth="80.0" text="Address" />
                              <TextField fx:id="txtAddress" maxHeight="20.0" maxWidth="150.0" prefHeight="20.0" prefWidth="150.0">
                                 <HBox.margin>
                                    <Insets left="20.0" />
                                 </HBox.margin>
                              </TextField>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#addCustomer" prefHeight="20.0" prefWidth="80.0" text="Add">
                                 <HBox.margin>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                 </HBox.margin>
                              </Button>
                              <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#submitAllCustomers" prefHeight="20.0" prefWidth="80.0" text="Submit">
                                 <HBox.margin>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                 </HBox.margin>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <VBox alignment="CENTER_RIGHT" prefHeight="400.0" prefWidth="393.0" style="-fx-background-color: #ddd;">
               <children>
                  <TextArea fx:id="tarCustomerInfo" prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: #DDD;">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </TextArea>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button maxHeight="20.0" maxWidth="100.0" mnemonicParsing="false" onAction="#displaySchedules" prefHeight="20.0" prefWidth="100.0" text="Get Schedule">
                           <HBox.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </HBox.margin>
                        </Button>
                        <Button maxHeight="20.0" maxWidth="100.0" mnemonicParsing="false" onAction="#displayProducts" prefHeight="20.0" prefWidth="100.0" text="Get Products">
                           <HBox.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#returnToMain" prefHeight="20.0" prefWidth="60.0" text="Back">
                           <HBox.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
